#include<iostream>
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        for(int i=1;i<=n;i++){
            for(int k=1;k<=i-1;k++){
                cout<<" ";
            }
            for(int j=1;j<=i;j++){
                cout<<"*";
            }
            cout<<endl;
        }
        for(int i=1;i<=n;i++){
            for(int k=n-2;k>=i;k--){
                cout<<" ";
            }
            for(int j=n-1;j>=i;j--){
                cout<<"*";
            }
            cout<<endl;
        }
    }
    return 0;
}
